{
  "name": "graffiti-ext",
  "private": true,
  "version": "0.0.3",
  "scripts": {
    "dev": "vite",
    "build": "npm run bundle:clean && npm run build:root && npm run build:content && npm run build:background && npm run build:popup && npm run bundle:copy",
    "build:root": "tsc && vite build",
    "build:popup": "cd popup && npm run build",
    "build:content": "rollup -c rollup.content.config.js",
    "build:background": "rollup -c rollup.background.config.js",
    "bundle": "npm run bundle:clean && npm run bundle:copy",
    "bundle:clean": "rimraf dist && mkdir -p dist",
    "bundle:copy": "cp -R public/* dist/",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:integration": "RUN_CONSTRAINT_TESTS=1 jest src/__tests__/supabase/constraints-rls.test.ts",
    "build:all": "npm run build && npm run build:content",
    "start:api": "tsx api/server.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.3",
    "@solana/wallet-standard-features": "^1.3.0",
    "@types/chrome": "^0.0.326",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "buffer": "^6.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "prettier": "^3.5.3",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.3",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "uuid": "^11.1.0"
  }
}
